@model Nop.Plugin.Widgets.TrendingProducts.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="TrendingProducts" asp-action="Configure" asp-antiforgery="true" method="post">
    <div class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-header">
                    Update Settings
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="FromDate" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="FromDate" />
                            <span asp-validation-for="FromDate"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="ToDate" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ToDate" />
                            <span asp-validation-for="ToDate"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="Count" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Count" />
                            <span asp-validation-for="Count"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-9 offset-md-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-1"></i>
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

