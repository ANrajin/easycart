@model ConfigurationModel
@{
    Layout = "_AdminLayout";
    NopHtml.SetActiveMenuItemSystemName("Widgets.HireForms.Configure");
}
<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Plugins.Widgets.HireForms.AdminMenuTitle.Configure") 
        <small>
            @*<i class="fas fa-arrow-circle-left"></i>
            <a asp-action="@listActionMethodName" asp-controller="@listControllerName">@T(backToLocale)</a>*@
        </small>
    </h1>
    <div class="float-right">
        &nbsp;
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            @await Component.InvokeAsync("StoreScopeConfiguration")
            <form asp-controller="HireRequestPlugin" asp-action="Configure" method="post">
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            @(await Html.LocalizedEditorAsync<ConfigurationModel, ConfigurationModel.ConfigurationLocalizedModel>("plugin-settings-localized",
                                @<div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <nop-override-store-checkbox asp-for="InfoBody_OverrideForStore" asp-input="@Model.Locales[item].InfoBody" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                            <nop-label asp-for="@Model.Locales[item].InfoBody" />
                                        </div>
                                        <div class="col-md-9">
                                            <nop-editor asp-for="@Model.Locales[item].InfoBody" asp-template="RichEditor" />
                                            <span asp-validation-for="@Model.Locales[item].InfoBody"></span>
                                        </div>
                                    </div>
                                    <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                                </div>
                                ,
                                @<div>

                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <nop-override-store-checkbox asp-for="InfoBody_OverrideForStore" asp-input="InfoBody" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                            <nop-label asp-for="InfoBody" />
                                        </div>
                                        <div class="col-md-9">
                                            <nop-editor asp-for="InfoBody" asp-template="RichEditor" />
                                            <span asp-validation-for="InfoBody"></span>
                                        </div>
                                    </div>
                                </div>
                                ,
                                //localizable settings per store (overridden store settings) are not supported yet
                                true
                                ))
                            <div class="form-group row">
                                <div class="col-md-9 offset-md-3">
                                    <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
