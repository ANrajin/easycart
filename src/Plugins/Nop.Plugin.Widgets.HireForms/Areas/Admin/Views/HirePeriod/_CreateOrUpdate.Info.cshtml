@model HirePeriodModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Hour" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Hour"/>
            <span asp-validation-for="Hour"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="TimeFrameId" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="TimeFrameId"/>
            <span asp-validation-for="TimeFrameId"></span>
        </div>
    </div>
</div>